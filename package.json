  "bugs": {
    "url": "https://github.com/mpietrowiak/mern-stack/issues"
  },
  "homepage": "https://github.com/mpietrowiak/mern-stack#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.3"
  }
}
